<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Balance</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <header>
        <h1>Zápis informací do profilů</h1>
    </header>
    <main>
        <form action="">
            <div class="profileCardWraper">
                <% people.forEach(function(person){ %>
                    <div class="profileCard">
                        <h2><%= person.name %></h2>
                        <p>Peníze: <%= person.money %>, Síla: <%= person.power %>, Zkušenosti: <%= person.experience %></p>
                        <input type="checkbox" id="<%= person.name %>Chech"><label>Upravovat hromadně</label>
                        <h3>Změny hodnot:</h3>
                        <input type="number" id="<%= person.name %>Money" placeholder="Peníze" step="1">
                        <input type="number" id="<%= person.name %>Power" placeholder="Síla" step="1">
                        <input type="number" id="<%= person.name %>Experience" placeholder="Zkušenosti" step="1">
                    </div>
                <% }) %>
                <div class="profileCard">
                    <h2>Hromadná úprava zaškrtnutých</h2>
                    <h3>Změny hodnot:</h3>
                    <input type="number" id="allMoney" placeholder="Peníze" step="1">
                    <input type="number" id="allPower" placeholder="Síla" step="1">
                    <input type="number" id="allExperience" placeholder="Zkušenosti" step="1">
                </div>
            </div>
            <button type="submit" class="center">Aktualizovat stavy</button>
        </form>
    </main>
    <footer>
        <p>&copy; Copyright <%= year %> Vytvořil Filip Jedlička - SŠPU Opava IT2</p>
    </footer>
</body>
<script src="js/script.js"></script>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Statistiky</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="shortcut icon" href="media/favicon.png" type="image/x-icon">
</head>
<body>
    <%- include('blocks/header'); -%>
    <main>
        <!--<input type="text" id="nameContains"><button id="nameContainsBtn" style="margin-bottom: 60px;">Filtrovat</button>-->
        <table>
            <thead>
                <tr>
                    <th id="sortByName"><a href="?sortBy=name&order=asc" class="asc">Jméno</a></th>
                    <th id="sortByMoney"><a href="?sortBy=money&order=desc" class="desc">Peníze</a></th>
                    <th id="sortByPower"><a href="?sortBy=power&order=desc" class="desc">Síla</a></th>
                    <th id="sortByExperience"><a href="?sortBy=experience&order=desc" class="desc">Zkušenosti</a></th>
                </tr>
            </thead>
            <tbody>
                <% people.forEach(function(person){ %>
                    <tr>
                        <th><%= person.name %></th>
                        <th><%= person.money %></th>
                        <th><%= person.power %></th>
                        <th><%= person.experience %></th>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </main>
    <%- include('blocks/footer'); -%>
</body>
<script src="js/stats.js"></script>
</html>